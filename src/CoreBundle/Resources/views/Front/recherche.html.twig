{# src/CoreBundle/Resources/views/Front/recherche.html.twig #}

{% extends "CoreBundle::layout.html.twig" %}

{% block title %}
	Faire une recherche - {{ parent() }}
{% endblock %}


{% block titlepage %}
<h2>Faire une recherche</h2>
	<style>
		/* Always set the map height explicitly to define the size of the div
		* element that contains the map. */
		#map {
			height: 300px;
			width: 100%;
		}
		/* Optional: Makes the sample page fill the window. */
		html, body {
			height: 100%;
			margin: 0;
			padding: 0;
		}
	</style>
{% endblock %}


{% block core_body %}
<div class="container">
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="bloc-obs col-lg-10">
			<div class="sub-title">
				<span>Recherche</span>
			</div>
			<div class="corps">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

					{{ form_widget(form.nomVern, {
						'attr': {
							'data-id': 'listedesespeces',
							'data-url': path('core_autocompletion')
							}
						})
					}}
				{{ form_end(form) }}
			</div>
		</div>
	</div>
	<br />


	<div class="row">
		<div class="col-lg-1"></div>
		<div class="bloc-obs col-lg-10">
			<div class="sub-title">
				<span>Fiche de l'espèce</span>
			</div>

			<div class="corps">
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Nom latin de l'espèce</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="lbnom"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Auteur</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="lbauteur"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Nom vernaculaire (FR)</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="lbnomvern"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Nom vernaculaire (ENG)</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="nomVernEng"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Famille</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="famille"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Phylum</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="phylum"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Classe</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="classe"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Ordre</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id="ordre"></p>
				</div>
				<div class="row">
					<div class="col-lg-1"></div>
					<h6 class="col-lg-5">Lien fiche INPN</h6>
					<div class="col-lg-1"></div>
					<p class="col-lg-5" id=""><a id = 'url' href= "" target="_blank"></a></p>
				</div>
			</div>
		</div>
	</div>
	<br />

	<div class="row" style="">
		<div class="col-lg-1"></div>
		<div class="bloc-obs col-lg-10">
			<div class="sub-title">
				<span>Carte</span>
			</div>

			<div class="col-lg-12" id="map" style="">

			</div>
			<br />
		</div>
	</div>
	<br />
	 
    
	<div class="row">
		<div class="col-lg-1"></div>
		<div class="bloc-obs col-lg-10">
			<div class="table-style2">
				<div class="sub-title">
					<span>Les observations de l'espèce</span>
				</div>
				<div class="table-responsive mtb">
					<table class="table table-bordered table-2 table-striped">
						<thead>
							<tr>
								<th>Date</th>
								<th>Auteur</th>
								<th>Image</th>
							</tr>
						</thead>
						<tbody>
							<tr>
								<td id="latitude"></td>
								<td id="longitude"></td>
								<td id="date"></td>

							</tr>
							<tr>
								<td>Row 2 Column 1</td>
								<td>Row 2 Column 2</td>
								<td>Row 2 Column 3</td>

							</tr>
							<tr>
								<td>Row 3 Column 1</td>
								<td>Row 3 Column 2</td>
								<td>Row 3 Column 3</td>

							</tr>
						</tbody>
					</table>
				</div>
		  	</div>
		</div>
	</div>
	<br />
</div>

<script>
	var self = this;
	function initMap(){
		self.map = new google.maps.Map($('#map')[0], {
		center: new google.maps.LatLng(46.606111,1.845278),
		zoom: 5,
		});

	}
</script>

{% endblock %}

