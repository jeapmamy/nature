{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="container">
	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<div class="form-box">
				<div class="form-top">
					<div class="form-top-left">
						<h3>Vous avez déjà un compte ?</h3>
						<p>Entrez vos identifiants et mot de passe :</p>
					</div>
					<div class="form-top-right">
						<i class="fa fa-key"></i>
					</div>
				</div>
				<div class="form-bottom">
					<form action="{{ path('fos_user_security_check') }}" method="post">
						{% if csrf_token %}
							<input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
						{% endif %}

						<div class="form-group">
							<label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
							<input type="text" class="form-control" id="username" name="_username" placeholder="Identifiant..." value="{{ last_username }}" required="required" />
						</div>
						<div class="form-group">
							<label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
							<input type="password" class="form-control" id="password" name="_password" placeholder="Mot de passe..." required="required" />
						</div>
						<br />
						<div class="form-check">
							<input type="checkbox" class="form-check-input" id="remember_me" name="_remember_me" value="on" />
							<label class="form-check-label" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
						</div>
						<br />
						<input type="submit" 
							class="btn btn-lg btn-primary btn-block"
							id="_submit" 
							name="_submit" 
							value="{{ 'security.login.submit'|trans }}" />

						<br />
						<div>
							<a href="{{ path('fos_user_resetting_request') }}">Mot de passe oublié ?</a>
						</div>
						<br />
						<div>
							Pas encore inscrit ? <a href="{{ path('fos_user_registration_register') }}">Inscrivez vous.</a>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>



       
		
