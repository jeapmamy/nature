</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">
	
	<div id="global">

		<header>
			<!-- Navigation
			================================================== -->
			
			<!-- nav bar -->
			<nav class="wr-nav blur fixed full" style="background-color: #fcfcfc; opacity: 1;">
					<div class="max-width container">
						<div class="navBar clear">
							<div class="row">
								<div class="col-xs-6 col-sm-6 col-md-3">
									<div id="logo" class="logo" style="margin-top: 10px; margin-bottom: 10px; ">
										<img src="http://localhost/nature/web/assets/img/nao_long.png" alt="">
									</div>
								</div>
								<!-- menu bar -->
								<div class="col-xs-6 col-sm-6 col-md-9">
									<div class="t-menu">
										<a class="menu-r-btn f-title"><div class="wr-menu-btn"><p class="open-sidebar"></p></div></a>
										<a class="back-btn hidden">BACK</a>
										<ul class="menu-r right menu-mobile">
											<li><a style="color: black;" href="#">Home</a></li>
											<li class="list-icon-mb"><a style="color: black;" href="#">Recherche</a></li>
											<li><a style="color: black;" href="#">Observation</a></li>
											<li class="list-icon-mb"><a style="color: black;" href="#">Blog</a></li>
											<li><a style="color: black;" href="#">L'association</a></li>
											<li><a style="color: black;" href="#">Connexion</a></li>
										</ul>
									</div>
								</div>
							</div>
						</div>
					</div>
			</nav><!-- End nav bar -->
		</header>
		{% block slider %}
		{% endblock %}
		
		<!-- Corps
		================================================== -->
		{% if app.request.hasPreviousSession %}
			{% for type, messages in app.session.flashbag.all() %}
				{% for message in messages %}
					<div class="alert alert-{{ type }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		{% endif %}

		<div id="content" class="container">
			<div class="col-md-12">
				{% block body %} {% endblock %}
			</div>
		</div>
	</div>


		<!-- Pied de Page
		================================================== -->
		<footer id="piedBlog">
			<div>
				NAO © {{ 'now'|date('Y') }} |
				<a href="{{ path('core_mentions_legales') }}"> Mentions légales</a> |
				<a href="{{ path('core_contact') }}"> Contact</a>
			</div>
		</footer>



	{% block javascripts %} 
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="http://localhost/nature/web/assets/js/helium/jquery.min.js"></script>
		<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  	
		<script src="http://localhost/nature/web/assets/js/autocomplete.js"></script>



		<!-- jQuery first, JS. Helium Template -->

