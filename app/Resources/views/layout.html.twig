{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	 <meta name="description" content="Bootstrap UI Kit">
  	<meta name="keywords" content="ui kit">
	<title>{% block title %}NAO{% endblock %}</title>

	{% block stylesheets %} 
	{# On charge le CSS de bootstrap depuis le site directement #}
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/style.css">
	

	<!-- CSS Files Helium template-->
	
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/bootstrap.min.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/main.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/animate.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/owl.carousel.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/owl.theme.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/responsive.css">
	<link rel="stylesheet" href=" https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="http://localhost/nature/web/assets/js/jquery-ui/jquery-ui.css">

	<!-- Fonts icons -->
	<link rel="stylesheet" href="http://localhost/nature/web/assets/css/helium/font-awesome.min.css">
	{% endblock %}
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">
	
	<div id="global">

		<header>
			<!-- Navigation
			================================================== -->
			<nav class="navbar navbar-toggleable-sm navbar-light bg-black" style="background-color: green;">
				<div class="container">
					<a class="navbar-brand" href="{{ path('core_index') }}"><img src="http://localhost/nature/web/assets/img/NAO_morad.png" alt=""></a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar2" aria-expanded="false" aria-label="Toggle navigation">
						<i class="fa fa-bars"></i>
					</button>
					<div class="collapse navbar-collapse justify-content-end" id="navbar2">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link" href="{{ path('core_index') }}"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>
							</li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_searchEspece') }}"><i class="fa fa-search" aria-hidden="true"></i> Recherche</a></li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_observation') }}"><i class="fa fa-eye" aria-hidden="true"></i> Observation</a></li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_association') }}"><i class="fa fa-users" aria-hidden="true"></i> Association</a></li>
							<li class="nav-item">
								{% if is_granted('ROLE_ADMIN') %}
									<a class="nav-link" href="{{ path('core_admin') }}"><i class="fa fa-cogs" aria-hidden="true"></i> Administration</a>
								{% endif %}
							</li>
							<li class="nav-item">
								{% if is_granted('ROLE_USER') %}
									<a class="nav-link" href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> Déconnexion</a>
								{% else %}
									<a class="nav-link" href="{{ path('fos_user_security_login') }}"><i class="fa fa-sign-in" aria-hidden="true"></i> Connexion</a>
								{% endif %}
							</li>
						</ul>
					</div>
				</div>
            </nav>
		</header>
		{% block slider %}
		{% endblock %}
		
		<!-- Corps
		================================================== -->
		{% if app.request.hasPreviousSession %}
			{% for type, messages in app.session.flashbag.all() %}
				{% for message in messages %}
					<div class="alert alert-{{ type }}">
						{{ message }}
					</div>
				{% endfor %}
			{% endfor %}
		{% endif %}

		<div id="content" class="container">
			<div class="col-md-12">
				{% block body %} {% endblock %}
			</div>
		</div>
	</div>


		<!-- Pied de Page
		================================================== -->
		<footer id="piedBlog">
			<div>
				NAO © {{ 'now'|date('Y') }} |
				<a href="{{ path('core_mentions_legales') }}"> Mentions légales</a> |
				<a href="{{ path('core_contact') }}"> Contact</a>
			</div>
		</footer>



	{% block javascripts %} 
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="http://localhost/nature/web/assets/js/helium/jquery.min.js"></script>
		<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  	
		<script src="http://localhost/nature/web/assets/js/autocomplete.js"></script>



<!-- jQuery first, JS. Helium Template -->

<script src="http://localhost/nature/web/assets/js/helium/tether.min.js"></script>
<script src="http://localhost/nature/web/assets/js/helium/bootstrap.min.js"></script>
<script src="http://localhost/nature/web/assets/js/helium/owl.carousel.min.js"></script>

<script src="http://localhost/nature/web/assets/js/helium/form-validator.min.js"></script>
<script src="http://localhost/nature/web/assets/js/helium/contact-form-script.js"></script>
  <script src="http://localhost/nature/web/assets/js/helium/main.js"></script>
	{% endblock %}

</body>

</html>
