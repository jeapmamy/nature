{# app/Resources/views/layout.html.twig #}

<!DOCTYPE html>
<html>

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	 <meta name="description" content="Bootstrap UI Kit">
  	<meta name="keywords" content="ui kit">
	<title>{% block title %}NAO{% endblock %}</title>

	{% block stylesheets %} 
	
	<!-- CSS Files template-->
	
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">
	<!--<link rel="stylesheet" href="http://localhost/nature/web/assets/js/jquery-ui/jquery-ui.css">-->
	<link rel="stylesheet" href="https://ajax.googleapis.com/ajax/libs/jqueryui/1.12.1/themes/smoothness/jquery-ui.css">
	
	{# On charge le CSS de bootstrap depuis le site directement #}
	<link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
	<link rel="stylesheet" href="{{asset('assets/css/carousel.css')}}">
	
	{% endblock %}
</head>

<body id="page-top" data-spy="scroll" data-target=".navbar">
	
	<div id="global">

		<header>
			<!-- Navigation
			================================================== -->
			<!-- Image and text -->
			<nav class="navbar navbar-light bg-light" style="background-color: #fcfcfc;">
				<div class="container">
					<div class="navbar-header">
						<a class="navbar-brand" href="{{ path('core_index') }}">
							<img src="{{asset('assets/img/nao_36.png')}}" width=124 height=130 alt="" class="d-inline-block align-top" alt="" style="margin-top: -40px;" id="logo">
						</a>
						<button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars fa-2x"></i>
						</button>
					</div>
					
					<div class="collapse navbar-collapse">
						<ul class="nav navbar-nav navbar-right">
						  <li class="nav-item">
								<a class="nav-link" href="{{ path('core_index') }}"><i class="fa fa-home" aria-hidden="true"></i> Accueil</a>
							</li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_searchEspece') }}"><i class="fa fa-search" aria-hidden="true"></i> Espèces</a></li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_observation') }}"><i class="fa fa-eye" aria-hidden="true"></i> Observation</a></li>
							<li class="nav-item"><a class="nav-link" href="https://nosamislesoiseauxblog.wordpress.com/"><i class="fa fa-comment" aria-hidden="true"></i> Blog</a></li>
							<li class="nav-item"><a class="nav-link" href="{{ path('core_association') }}"><i class="fa fa-users" aria-hidden="true"></i> Association</a></li>
							<li class="nav-item">
								{% if is_granted('ROLE_ADMIN') %}
									<a class="nav-link" href="{{ path('core_admin') }}"><i class="fa fa-cogs" aria-hidden="true"></i> Gestion</a>
								{% endif %}
							</li>
							<li class="nav-item">
								{% if is_granted('ROLE_USER') %}
									<a class="nav-link" href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out" aria-hidden="true"></i> {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}</a>
								{% else %}
									<a class="nav-link" href="{{ path('fos_user_security_login') }}"><i class="fa fa-sign-in" aria-hidden="true"></i> {{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
								{% endif %}
							</li>
							<li class="nav-item">
								{% if is_granted('ROLE_USER') %}
									<a class="nav-link" href="{{ path('fos_user_profile_edit') }}" title="Modifier mon profil"><i class="fa fa-user" aria-hidden="true"></i> {{ app.user.username }}</a>
								{% endif %}
							</li>
						</ul>
					  </div>
				</div>
            </nav>
		</header>
		{% block slider %}
		{% endblock %}
		
		<!-- Corps
		================================================== -->
		<div id="content" class="container">
			<div class="col-lg-12">
				{% block body %} {% endblock %}
			</div>
		</div>
	


		<!-- Pied de Page
		================================================== -->
		<footer id="piedBlog">
			<div class="container">
				<a href="https://www.facebook.com/Nos-amis-les-oiseaux-NAO-518677581818385/" title="Facebook" target="_blank">
					<i class="fa fa-facebook-official fa-2x" aria-hidden="true"></i>
				</a>
				<button class="btn btn-warning" type="button" id="monBouton"><i class="fa fa-angle-up fa-2x" aria-hidden="true"></i></button>
				
				NAO © {{ 'now'|date('Y') }} |
				<a href="{{ path('core_mentions_legales') }}"> Mentions légales</a> |
				<a href="{{ path('core_contact') }}"> Contact</a>
			</div>
		</footer>
		
	</div>


		<!-- JavaScript
		================================================== -->
	{% block javascripts %}
		<!-- jQuery -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
		<!-- Javascript de Bootstrap -->
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

		<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
		<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
	
		<script src="{{asset('assets/js/autocomplete.js')}}"></script>
		<script src="{{asset('assets/js/main.js')}}"></script>


		<!-- Script Map
		================================================== -->

	    <script async defer
	    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA_XXnags0z7NC28Q4BvDKZ8PuE8AeBBEw&callback=initMap">
	    </script>

	{% endblock %}

</body>

</html>
